print("Привет я питон")
name = input(str("Ваше имя: "))
print(name, "какое красивое имя вау вау!")
a = input(name + "Давай узнаем индекс мыссы тела 1 да, 2 нет")
if a == "1":
    length = len(name)
    mass = float(input("Введите вашу массу (в кг): "))
    if mass > 1000:
        print("Это не возможно!")
    i = mass / (0.01 * length) ** 2
    print(name + "! Индекс вашего тела:", i)
    if i < 16:
        print("Недостаточный вес")
    elif 16 <=i< 19:
        print("Недостаточно вес")
    elif 19 <= i < 25:
        print("Нормально вес")
    elif 25 <= i < 30:
        print("Преобладание")
    elif 30 <= i < 35:
        print("Ожирение")
    elif 35 <= i < 40:
        print("Сильное ожирение")
    else:
        print("Ожирение опасно для здоровья")
else:
    print("Жалко! Это очень полезная информация!")
    print()
print("Увидимся, ", name ,"! Навсегда твой, Питон!")
